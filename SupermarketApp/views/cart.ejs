<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>

<body>
  <%- include("partials/navbar", { user: user }) %>

  <div class="container py-4">
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(e=> { %>
          <div><%= e %></div>
        <% }) %>
      </div>
    <% } %>

    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(m=> { %>
          <div><%= m %></div>
        <% }) %>
      </div>
    <% } %>

    <h2 class="mb-4">Shopping Cart</h2>

    <% if (!cart || cart.length===0) { %>
      <div class="card">
        <div class="card-body">
          <p class="mb-0">Your cart is empty.</p>
          <a href="/shopping" class="btn btn-primary mt-3">Continue Shopping</a>
        </div>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col" style="width:170px">Quantity</th>
              <th scope="col">Subtotal</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% let total=0; %>
            <% cart.forEach(function(item) { 
                 const imgSrc = item.image
                   ? (typeof item.image === 'string' && item.image.startsWith('/')
                        ? item.image
                        : '/images/' + item.image)
                   : '/images/default.png';
                 const subtotal = (item.price || 0) * (item.quantity || 0);
                 total += subtotal;
            %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <img src="<%= imgSrc %>" alt="<%= item.productName %>" class="img-thumbnail me-3"
                      style="width:100px; height:80px; object-fit:cover;">
                    <div>
                      <div class="fw-bold"><%= item.productName %></div>
                    </div>
                  </div>
                </td>

                <td>$<%= (item.price || 0).toFixed(2) %></td>

                <td>
                  <form action="/cart/update/<%= item.id %>" method="POST" class="d-flex">
                    <input
                      type="number"
                      name="quantity"
                      min="1"
                      class="form-control form-control-sm"
                      style="max-width:90px"
                      aria-label="Quantity"
                      value="<%= item.quantity %>"
                      onchange="this.form.submit()"
                    >
                  </form>
                </td>

                <td>$<%= subtotal.toFixed(2) %></td>

                <td>
                  <!-- Remove item via POST to /cart/remove/:id -->
                  <form action="/cart/remove/<%= item.id %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
          <form action="/cart/clear" method="POST" onsubmit="return confirm('Clear your cart?');"
            class="d-inline">
            <button type="submit" class="btn btn-danger">Clear Cart</button>
          </form>
          <a href="/shopping" class="btn btn-secondary ms-2">Continue Shopping</a>
        </div>

        <div class="text-end">
          <h5 class="mb-1">Total</h5>
          <h4 class="mb-0">$<%= total.toFixed(2) %></h4>
        </div>
      </div>

      <!-- Checkout button (only shown when cart has items) -->
      <div class="d-flex justify-content-end mt-3">
        <form action="/checkout" method="POST">
          <button type="submit" class="btn btn-success">Proceed to Checkout</button>
        </form>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
