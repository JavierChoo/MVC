<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
      <div class="d-flex">
        <span class="navbar-text text-light me-3"><%= user ? user.username : '' %></span>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(e => { %><div><%= e %></div><% }) %>
      </div>
    <% } %>

    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(m => { %><div><%= m %></div><% }) %>
      </div>
    <% } %>

    <h2 class="mb-4">Shopping Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <div class="card">
        <div class="card-body">
          <p class="mb-0">Your cart is empty.</p>
          <a href="/shopping" class="btn btn-primary mt-3">Continue Shopping</a>
        </div>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table align-middle">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col" style="width:170px">Quantity</th>
              <th scope="col">Subtotal</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% let total = 0; %>
            <% cart.forEach(function(item) { 
                 const imgSrc = item.image
                   ? (typeof item.image === 'string' && item.image.startsWith('/') ? item.image : '/images/' + item.image)
                   : '/images/default.png';
                 const subtotal = (item.price || 0) * (item.quantity || 0);
                 total += subtotal;
            %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <img src="<%= imgSrc %>" alt="<%= item.productName %>" class="img-thumbnail me-3" style="width:100px; height:80px; object-fit:cover;">
                    <div>
                      <div class="fw-bold"><%= item.productName %></div>
                    </div>
                  </div>
                </td>

                <td>$<%= (item.price || 0).toFixed(2) %></td>

                <td>
                  <form action="/cart/update/<%= item.id %>" method="POST" class="d-flex gap-2">
                    <select name="quantity" class="form-select form-select-sm" aria-label="Quantity">
                      <% for (let q = 1; q <= 10; q++) { %>
                        <option value="<%= q %>" <%= q === item.quantity ? 'selected' : '' %>><%= q %></option>
                      <% } %>
                    </select>
                    <button type="submit" class="btn btn-sm btn-outline-primary">Update</button>
                  </form>
                </td>

                <td>$<%= subtotal.toFixed(2) %></td>

                <td>
                  <form action="/cart/update/<%= item.id %>" method="POST" class="d-inline">
                    <!-- attempt to remove by posting quantity=0; controller may handle removal -->
                    <input type="hidden" name="quantity" value="0">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
          <form action="/cart/clear" method="POST" onsubmit="return confirm('Clear your cart?');" class="d-inline">
            <button type="submit" class="btn btn-danger">Clear Cart</button>
          </form>
          <a href="/shopping" class="btn btn-secondary ms-2">Continue Shopping</a>
        </div>

        <div class="text-end">
          <h5 class="mb-1">Total</h5>
          <h4 class="mb-0">$<%= total.toFixed(2) %></h4>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
