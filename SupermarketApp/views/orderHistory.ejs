<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
</head>

<body>
  <%- include("partials/navbar", { user: user }) %>

    <div class="container py-4">
      <% if (errors && errors.length) { %>
        <div class="alert alert-danger">
          <% errors.forEach(function(e){ %>
            <div>
              <%= e %>
            </div>
            <% }); %>
        </div>
        <% } %>

          <% if (messages && messages.length) { %>
            <div class="alert alert-success">
              <% messages.forEach(function(m){ %>
                <div>
                  <%= m %>
                </div>
                <% }); %>
            </div>
            <% } %>

              <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0"><%= user && user.role === 'admin' ? 'All Orders' : 'Your Orders' %></h2>
                <% if (!user || user.role !== 'admin') { %>
                  <a href="/shopping" class="btn btn-secondary">Continue Shopping</a>
                <% } %>
              </div>

              <% if (!orders || orders.length===0) { %>
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">You have no past orders.</h5>
                    <p class="card-text">Start shopping to create your first order.</p>
                    <a href="/shopping" class="btn btn-primary">Shop Now</a>
                  </div>
                </div>
                <% } else { %>
                  <div class="table-responsive">
                    <table class="table table-hover align-middle">
                      <thead class="table-light">
                        <tr>
                          <th scope="col">Order ID</th>
                          <% if (user && user.role === 'admin') { %>
                            <th scope="col">Customer</th>
                          <% } %>
                          <th scope="col">Date</th>
                          <th scope="col">Total Amount</th>
                          <th scope="col" class="text-end">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% orders.forEach(function(order) { %>
                          <tr>
                            <td>#<%= order.id %>
                            </td>
                            <% if (user && user.role === 'admin') { %>
                              <td>
                                <div class="fw-semibold"><%= order.customerName || 'N/A' %></div>
                                <div class="text-muted small"><%= order.customerEmail || '' %></div>
                              </td>
                            <% } %>
                            <td>
                              <%= (new Date(order.created_at)).toLocaleString() %>
                            </td>
                            <td>$<%= (order.total || 0).toFixed(2) %>
                            </td>
                            <td class="text-end">
                              <a href="/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                            </td>
                          </tr>
                          <% }); %>
                      </tbody>
                    </table>
                  </div>
                  <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
