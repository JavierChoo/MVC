<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Order History - Supermarket App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navCollapse">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/shopping">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
        </ul>

        <div class="d-flex align-items-center">
          <% if (user) { %>
            <span class="text-light me-3"><%= user.username %> (<%= user.role %>)</span>
            <a class="btn btn-outline-light btn-sm" href="/logout">Logout</a>
          <% } else { %>
            <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="container py-4">
    <% if (errors && errors.length) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(e){ %>
          <div><%= e %></div>
        <% }); %>
      </div>
    <% } %>

    <% if (messages && messages.length) { %>
      <div class="alert alert-success">
        <% messages.forEach(function(m){ %>
          <div><%= m %></div>
        <% }); %>
      </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">Your Orders</h2>
      <a href="/shopping" class="btn btn-secondary">Continue Shopping</a>
    </div>

    <% if (!orders || orders.length === 0) { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">You have no past orders.</h5>
          <p class="card-text">Start shopping to create your first order.</p>
          <a href="/shopping" class="btn btn-primary">Shop Now</a>
        </div>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th scope="col">Order ID</th>
              <th scope="col">Date</th>
              <th scope="col">Total Amount</th>
              <th scope="col" class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(order) { %>
              <tr>
                <td>#<%= order.id %></td>
                <td><%= (new Date(order.created_at)).toLocaleString() %></td>
                <td>$<%= (order.total_amount || 0).toFixed(2) %></td>
                <td class="text-end">
                  <a href="/orders/<%= order.id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
