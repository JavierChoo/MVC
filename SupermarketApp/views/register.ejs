<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Register - Supermarket App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <div>
        <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
      </div>
    </div>
  </nav>

  <main class="d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 56px);">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
          <div class="card shadow-sm">
            <div class="card-header text-center">
              <h4 class="mb-0">Create an account</h4>
            </div>
            <div class="card-body p-4">
              <% 
                // Support both variable names passed from controller
                const errorsList = (typeof errors !== 'undefined' && errors) ? errors : (typeof messages !== 'undefined' ? messages : []);
                const fd = (typeof formData !== 'undefined' && formData) ? formData : {};
              %>

              <% if (errorsList && errorsList.length) { %>
                <div class="alert alert-danger">
                  <% errorsList.forEach(function(err){ %>
                    <div><%= err %></div>
                  <% }); %>
                </div>
              <% } %>

              <form action="/register" method="POST" novalidate>
                <div class="row g-3">
                  <div class="col-12">
                    <label for="username" class="form-label">Username</label>
                    <input id="username" name="username" type="text" class="form-control" required value="<%= fd.username || '' %>">
                  </div>

                  <div class="col-12 col-md-6">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" name="email" type="email" class="form-control" required value="<%= fd.email || '' %>">
                  </div>

                  <div class="col-12 col-md-6">
                    <label for="password" class="form-label">Password</label>
                    <input id="password" name="password" type="password" class="form-control" required>
                  </div>

                  <div class="col-12">
                    <label for="address" class="form-label">Address</label>
                    <input id="address" name="address" type="text" class="form-control" required value="<%= fd.address || '' %>">
                  </div>

                  <div class="col-12 col-md-6">
                    <label for="contact" class="form-label">Contact Number</label>
                    <input id="contact" name="contact" type="text" class="form-control" required value="<%= fd.contact || '' %>">
                  </div>

                  <div class="col-12 col-md-6">
                    <label for="role" class="form-label">Role</label>
                    <select id="role" name="role" class="form-select" required>
                      <option value="user" <%= (fd.role === 'user' || !fd.role) ? 'selected' : '' %>>User</option>
                      <option value="admin" <%= fd.role === 'admin' ? 'selected' : '' %>>Admin</option>
                    </select>
                  </div>

                  <div class="col-12">
                    <div class="d-grid">
                      <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                  </div>

                  <div class="col-12 text-center">
                    <small>Already have an account? <a href="/login">Login</a></small>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
